using System;

namespace CsRealLearning
{
    internal class Program
    {
        static void Main()
        {
            Console.OutputEncoding = System.Text.Encoding.UTF8;
            Console.ForegroundColor = ConsoleColor.Magenta;

            // –°–æ–∑–¥–∞–µ–º —ç–∫–∑–µ–º–ø–ª—è—Ä –∏–≥—Ä–æ–∫–∞
            Player husband = new Player("–ê–ª–µ–∫—Å");

            // –ü—Ä–∏–≤–µ—Ç—Å—Ç–≤—É–µ–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
            Console.WriteLine($"–ü—Ä–∏–≤–µ—Ç, {husband.Name}! ‚ù§Ô∏è");
            Console.WriteLine("–î–∞–≤–∞–π —Å—ã–≥—Ä–∞–µ–º –≤ –º–∏–ª—É—é –∏–≥—Ä—É:\n");

            string answer;
            bool guessed = false;

            while (!guessed)
            {
                Console.WriteLine("–ö–∞–∫–æ–µ —á–∏—Å–ª–æ —è –∑–∞–≥–∞–¥–∞–ª–∞? (1-5) üí≠");
                answer = Console.ReadLine();

                if (answer == "7")
                {
                    husband.GiveBigHug();
                    guessed = true; // –í—ã—Ö–æ–¥–∏–º –∏–∑ —Ü–∏–∫–ª–∞
                }
                else
                {
                    husband.GiveKiss();
                    Console.WriteLine("\n–ü–æ–ø—Ä–æ–±—É–π –µ—â—ë —Ä–∞–∑... ü•∫\n");
                }
            }

            Console.WriteLine("\n–ù–∞–∂–º–∏—Ç–µ –ª—é–±—É—é –∫–ª–∞–≤–∏—à—É –¥–ª—è –≤—ã—Ö–æ–¥–∞...");
            Console.ReadKey();
        }

        class Player
        {
            public string Name { get; private set; }

            public Player(string name)
            {
                Name = name;
            }

            public void GiveKiss()
            {
                Console.WriteLine("\n‚úø‚ô°‚Äø‚ô° –ù–µ–≤–µ—Ä–Ω–æ, –Ω–æ —è –≤—Å—ë —Ä–∞–≤–Ω–æ —Ç–µ–±—è –ª—é–±–ª—é!");
                Console.WriteLine("–¢—ã –º–æ–π —Å–∞–º—ã–π –ª—É—á—à–∏–π –ø—Ä–æ–≥—Ä–∞–º–º–∏—Å—Ç –≤ –º–∏—Ä–µ <3");
            }

            public void GiveBigHug()
            {
                Console.WriteLine("\n‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è –ü–†–ê–í–ò–õ–¨–ù–û! ‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è");
                Console.WriteLine("–¢—ã —É–≥–∞–¥–∞–ª –º–æ—ë –ª—é–±–∏–º–æ–µ —á–∏—Å–ª–æ - 7,");
                Console.WriteLine("–∫–∞–∫ –∏ –Ω–∞—à–∏ —à–∞–Ω—Å—ã –Ω–∞ —Å—á–∞—Å—Ç—å–µ! üíñ");
                Console.WriteLine("–û–±–Ω–∏–º–∞—à–∫–∏! (ÔΩ°‚óï‚Äø‚óïÔΩ°) –° —Ç–æ–±–æ–π –¥–∞–∂–µ –±–∞–≥–∏ –∫–∞–∂—É—Ç—Å—è –º–∏–ª—ã–º–∏");
            }
        }
    }
}
