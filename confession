using System;

namespace CsRealLearning
{
    internal class Program
    {
        static void Main()
        {
            Console.OutputEncoding = System.Text.Encoding.UTF8;
            Console.ForegroundColor = ConsoleColor.Magenta;

            // Create player instance
            Player husband = new Player("Alex");

            // Welcome message
            Console.WriteLine($"Hi, {husband.Name}! ‚ù§Ô∏è");
            Console.WriteLine("Let's play a cute little game:\n");

            string answer;
            bool guessed = false;

            while (!guessed)
            {
                Console.WriteLine("What number did I guess? (1-5) üí≠");
                answer = Console.ReadLine();

                if (answer == "7")
                {
                    husband.GiveBigHug();
                    guessed = true; // Exit loop
                }
                else
                {
                    husband.GiveKiss();
                    Console.WriteLine("\nTry again... ü•∫\n");
                }
            }

            Console.WriteLine("\nPress any key to exit...");
            Console.ReadKey();
        }

        class Player
        {
            public string Name { get; private set; }

            public Player(string name)
            {
                Name = name;
            }

            public void GiveKiss()
            {
                Console.WriteLine("\n‚úø‚ô°‚Äø‚ô° Not quite, but I still love you!");
                Console.WriteLine("You're the best programmer in my world <3");
            }

            public void GiveBigHug()
            {
                Console.WriteLine("\n‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è CORRECT! ‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è");
                Console.WriteLine("You guessed my favorite number ‚Äî 7,");
                Console.WriteLine("just like our chances of being happy together! üíñ");
                Console.WriteLine("Big hug! (ÔΩ°‚óï‚Äø‚óïÔΩ°) Even bugs feel cute with you");
            }
        }
    }
}
